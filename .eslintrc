{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": ["src/**/*.d.ts"],
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "no-console": 2
    }
}